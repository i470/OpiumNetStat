        <Border Background="#CC2B2B2B" x:Name="border" Visibility="Collapsed">
            <TextBlock Text="LOADING..." Foreground="#66FFFFFF" HorizontalAlignment="Center" Opacity="0.6" VerticalAlignment="Center" FontSize="100" Margin="-20" >
                <TextBlock.Effect>
                    <DropShadowEffect/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
