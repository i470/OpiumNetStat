                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border>
                                    <Button Style="{StaticResource RowButton}" >
                                        <fa:FontAwesome Icon="ToggleOn"/>
                                    </Button>

                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="IsTracker" Header="Tracker">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border >
                                    <fa:FontAwesome Icon="Bug" Width="32" Height="32" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" />
